<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/dialog_phone_bg"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="@dimen/dp_92">
        <CheckBox
            android:id="@+id/rb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:button="@drawable/radiobutton_background"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="#999999">
        </CheckBox>
        <com.yidian.chengshengda.custom.CustomRoundAngleImageView
            android:layout_width="@dimen/dp_63"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/iv_img"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/rb_checked"
            roundiv:left_top_radius="@dimen/dp_5"
            roundiv:right_top_radius="@dimen/dp_5"
            roundiv:right_bottom_radius="@dimen/dp_5"
            roundiv:left_bottom_radius="@dimen/dp_5"
            android:src="@mipmap/headimg"
            android:layout_height="@dimen/dp_63">
        </com.yidian.chengshengda.custom.CustomRoundAngleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="广告皮地址"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_sites_distance"
            android:layout_toRightOf="@id/iv_img"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_42"
            android:text="20月"
            android:layout_marginTop="@dimen/dp_7"
            android:id="@+id/tv_month_count"
            android:layout_below="@id/tv_sites_distance"
            android:layout_toRightOf="@id/iv_img"
            android:background="@drawable/item_sell_price_bg"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_15">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="￥200"
            android:layout_toRightOf="@id/iv_img"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/tv_price"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/tv_month_count"
            android:layout_height="wrap_content">
        </TextView>
        <com.yidian.chengshengda.custom.CustomCountView
            android:layout_width="@dimen/dp_72"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/ccv_item_shop_car"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_height="@dimen/dp_24">
        </com.yidian.chengshengda.custom.CustomCountView>
    </RelativeLayout>
</RelativeLayout>