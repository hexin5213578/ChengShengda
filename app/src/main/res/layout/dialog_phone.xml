<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_245"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_phone_bg"
        android:layout_height="@dimen/dp_99">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="姓名:"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="偏爱"
                android:id="@+id/tv_name"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/l1"
            android:id="@+id/l2"
            android:layout_marginLeft="@dimen/dp_42"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="电话:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="12345678901"
                android:textSize="@dimen/sp_14"
                android:id="@+id/tv_number"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f7f7f7"
            android:id="@+id/v1"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@id/l2">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="拨打电话"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center"
                android:textColor="@color/color_0BA4E9"
                android:id="@+id/tv_call"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>