<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_top"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_13"
            android:id="@+id/back"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="站点广告详情"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="#F7F7F7"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <com.youth.banner.Banner
                    android:layout_width="match_parent"
                    android:id="@+id/xbn"
                    android:layout_height="@dimen/dp_275">
                </com.youth.banner.Banner>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:id="@+id/rl_msg"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/white_radious_bg"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="@dimen/dp_64">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="￥"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#FF2929"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="168/月"
                            android:textSize="@dimen/sp_15"
                            android:textColor="#FF2929"
                            android:id="@+id/tv_price"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="广告位置"
                        android:id="@+id/tv_address"
                        android:layout_alignParentBottom="true"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_333333"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="@dimen/dp_52"
                        android:text="未售出"
                        android:id="@+id/tv_issall"
                        android:background="@drawable/details_bg"
                        android:layout_alignParentRight="true"
                        android:textColor="#0BA4E9"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_height="@dimen/dp_17">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="10次已租"
                        android:textColor="@color/color_999999"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_lease_count"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="历史租赁"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_history"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:visibility="visible">
                </androidx.recyclerview.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:id="@+id/rl_noHistory"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="@dimen/dp_280">
                    <ImageView
                        android:layout_width="@dimen/dp_168"
                        android:src="@mipmap/no_history"
                        android:layout_marginTop="@dimen/dp_25"
                        android:id="@+id/iv"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_144">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="暂无租赁历史"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12"
                        android:layout_below="@id/iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/shadow_163030"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_50">
            <LinearLayout
                android:layout_width="@dimen/dp_160"
                android:layout_alignParentRight="true"
                android:background="@drawable/main_arrice_bt_bg"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="@dimen/dp_93"
                    android:text="加入购物车"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:id="@+id/tv_add_shopcar"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
                <View
                    android:layout_width="@dimen/dp_1"
                    android:background="#33C0FF"
                    android:layout_height="match_parent">
                </View>
                <TextView
                    android:layout_width="match_parent"
                    android:text="提交"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:id="@+id/tv_commit"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>