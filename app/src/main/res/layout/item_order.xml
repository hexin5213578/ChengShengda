<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/rc_bg"
        android:layout_height="@dimen/dp_83">
        <com.yidian.chengshengda.image.CustomRoundAngleImageView
            android:layout_width="@dimen/dp_63"
            android:id="@+id/iv_img"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            roundiv:radius="@dimen/dp_10"
            android:src="@mipmap/headimg"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="@dimen/dp_63">
        </com.yidian.chengshengda.image.CustomRoundAngleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="广告位地址"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/iv_img"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_15">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_59"
            android:layout_toRightOf="@id/iv_img"
            android:text="200元/月"
            android:background="@drawable/order_item_tv_bg"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:id="@+id/tv_price"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_15">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="￥200"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@id/iv_img"
            android:layout_below="@id/tv_price"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_101"
            android:text="租赁至2020-10-20"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:id="@+id/tv_leased_time"
            android:textColor="@color/white"
            android:background="@drawable/order_item_tv_bg2"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_15">
        </TextView>
    </RelativeLayout>
</RelativeLayout>