<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f7f7f7"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_22"
            android:id="@+id/back"
            android:layout_height="@dimen/dp_16">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="设置"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_img"
            android:layout_below="@id/back"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:src="@mipmap/back_right"
                android:scaleType="centerCrop"
                android:id="@+id/iv"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_16">
            </ImageView>
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@mipmap/headimg"
                android:id="@+id/iv_headimg"
                android:layout_toLeftOf="@id/iv"
                android:layout_height="match_parent">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/rl_img"
            android:id="@+id/v1"
            android:layout_marginTop="@dimen/dp_12"
            android:background="#F7F7F7"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_below="@id/v1"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="昵称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:src="@mipmap/back_right"
                android:scaleType="centerCrop"
                android:id="@+id/iv2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_16">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="偏爱"
                android:textColor="@color/color_666666"
                android:id="@+id/tv_name"
                android:textSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv2"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/rl_name"

            android:id="@+id/v2"
            android:background="#F7F7F7"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:id="@+id/rl_set_pwd"
            android:layout_width="match_parent"
            android:layout_below="@id/v2"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="修改密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:src="@mipmap/back_right"
                android:scaleType="centerCrop"
                android:id="@+id/iv3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_16">
            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/rl_set_pwd"
            android:id="@+id/v3"
            android:background="#F7F7F7"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:id="@+id/rl_clean"
            android:layout_width="match_parent"
            android:layout_below="@id/v3"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="清理缓存空间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:src="@mipmap/back_right"
                android:scaleType="centerCrop"
                android:id="@+id/iv4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_16">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="120MB"
                android:id="@+id/tv_huancun"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv4"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/rl_clean"
            android:id="@+id/v4"
            android:background="#F7F7F7"
            android:layout_height="@dimen/dp_1">
        </View>
        <RelativeLayout
            android:id="@+id/rl_banben"
            android:layout_width="match_parent"
            android:layout_below="@id/v4"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:layout_width="wrap_content"
                android:text="版本型号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:src="@mipmap/back_right"
                android:scaleType="centerCrop"
                android:id="@+id/iv5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_16">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="0.1.1"
                android:textColor="@color/color_666666"
                android:id="@+id/tv_banben"
                android:textSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv5"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/rl_banben"
            android:background="#F2F2F2"
            android:id="@+id/v5"
            android:layout_height="@dimen/dp_3">
        </View>
        <TextView
            android:layout_width="match_parent"
            android:text="注销账号"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_zhuxiao"
            android:textColor="#0BA4E9"
            android:layout_below="@id/v5"
            android:gravity="center"
            android:layout_height="@dimen/dp_40">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_below="@id/tv_zhuxiao"
            android:background="#F2F2F2"
            android:id="@+id/v6"
            android:layout_height="@dimen/dp_3">
        </View>
        <TextView
            android:layout_width="match_parent"
            android:text="退出登录"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_cancle"
            android:textColor="#0BA4E9"
            android:layout_below="@id/v6"
            android:gravity="center"
            android:layout_height="@dimen/dp_40">
        </TextView>
    </RelativeLayout>

</RelativeLayout>