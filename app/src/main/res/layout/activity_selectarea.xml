<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/white" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/title" android:id="@+id/include">
            </include>
            <TextView
                android:layout_width="wrap_content"
                android:text="当前定位"
                android:layout_below="@id/include"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tv1"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_width="@dimen/dp_103"
                android:background="@drawable/select_item_bg"
                android:layout_below="@id/tv1"
                android:id="@+id/l1"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/dingwei"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="柘城县"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center"
                    android:maxEms="3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv_mylocation"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="可选城市"
                android:layout_below="@id/l1"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tv2"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_width="@dimen/dp_103"
                android:background="@drawable/select_item_bg"
                android:layout_below="@id/tv2"
                android:id="@+id/l2"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_40">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/dingwei"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="重庆市"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center"
                    android:maxLength="3"
                    android:ellipsize="end"
                    android:id="@+id/tv_kexuan"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_666666"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="区域选择"
                android:layout_below="@id/l2"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tv3"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_333333"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@id/tv3"
                android:background="@color/white"
                android:id="@+id/rc_area"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>