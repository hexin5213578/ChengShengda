<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rl_item"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/item_sell_bg"
        android:layout_height="@dimen/dp_83">
        <com.yidian.chengshengda.image.CustomRoundAngleImageView
            android:layout_width="@dimen/dp_63"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/iv_img"
            android:scaleType="centerCrop"
            roundiv:left_top_radius="@dimen/dp_5"
            roundiv:right_top_radius="@dimen/dp_5"
            roundiv:right_bottom_radius="@dimen/dp_5"
            roundiv:left_bottom_radius="@dimen/dp_5"
            android:src="@mipmap/headimg"
            android:layout_height="@dimen/dp_63">
        </com.yidian.chengshengda.image.CustomRoundAngleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="广告点位置"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@id/iv_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:id="@+id/tv_sites_distance"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="@dimen/dp_59"
            android:text="200元/月"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:id="@+id/tv_price"
            android:textColor="#999999"
            android:background="@drawable/item_sell_price_bg"
            android:layout_toRightOf="@id/iv_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_15">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="距离我:"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_0BA4E9"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="20km"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_0BA4E9"
                android:id="@+id/tv_distance"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>