<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--首页tab-->
    <style name="MainTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
    </style>

    <!--广告牌页tab-->
    <style name="advTab">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@drawable/selector_find_tab_text_color</item>
    </style>

    <style name="TabLayoutTextSelected">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_0BA4E9</item>
    </style>

    <style name="TabLayoutTextUnSelected">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <!--tab选中字体加粗-->
    <style name="txt_bold" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">bold</item>
    </style>
    <!--未选中默认-->
    <style name="txt_nomal" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialog_custom" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>